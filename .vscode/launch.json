  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Frontend",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeArgs": ["run", "start:development"],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Start Backend",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/backend",
      "runtimeArgs": ["run", "start:development"],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Migrate DB",
      "runtimeExecutable": "npm",
      "cwd": "${workspaceFolder}/backend",
      "runtimeArgs": ["run", "migrate:development"],
    }
  ]
}